            <h1>Création d'événement</h1>
            {{ form_start(form, {"action": path('miriade_event_event_create')} ) }}
            <div class="event-creation">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.title) }}
