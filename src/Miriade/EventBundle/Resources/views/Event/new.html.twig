{% extends 'MiriadeEventBundle::layout.html.twig' %}
{%block stylesheets%}
	<link href="{{ asset('assets/css/datepicker.css') }}" type="text/css" rel="stylesheet" />
{%endblock%}
{% block content %}
	<div id="event-wrapper" class="container">
        <div class="row">
            <div class="col-md-9">
                {{ form_start(form, {"action": path('miriade_event_new')} ) }}
								<h2>Création d'événement</h2>
                <div class="event-creation row well">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.title) }}
								{{ form_widget(form.title, {'attr' : {'class' : 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.description) }}
								{{ form_widget(form.description, {'attr' : {'class' : 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
								{{ form_label(form.image) }}
                                <span class="btn btn-default btn-file">
                                    Chercher sur mon ordinateur {{ form_widget(form.image, {'attr' : {'id' : 'exampleInputFile'}}) }}
                                </span>
                                <p class="help-block">Image d'événement sur accueil</p>
                                <img class="img-responsive" src="http://placehold.it/700x400" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.startDate) }}
                                        <div class="form-group">
                                            <div class='input-group date' id='datetimepicker1'>
                                                {{ form_widget(form.startDate, {'attr' : {'class' : 'form-control'}}) }}
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_label(form.endDate) }}
                                        <div class="form-group">
                                            <div class='input-group date' id='datetimepicker2'>
                                                {{ form_widget(form.endDate, {'attr' : {'class' : 'form-control'}}) }}
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                               {{ form_label(form.adress) }}
                               {{ form_widget(form.adress, {'attr' : {'class' : 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.cp) }}
								{{ form_widget(form.cp, {'attr' : {'class' : 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.city) }}
								{{ form_widget(form.city, {'attr' : {'class' : 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
                            <script>
                                function init_map() {
                                    var var_location = new google.maps.LatLng(49.1871015,-0.3131677);

                                      var var_mapoptions = {
                                        center: var_location,
                                        zoom: 14
                                      };

                                    var var_marker = new google.maps.Marker({
                                        position: var_location,
                                        map: var_map,
                                        title:"Venice"
                                    });

                                      var var_map = new google.maps.Map(document.getElementById("map-container"),
                                          var_mapoptions);

                                    var_marker.setMap(var_map);
                                }

                                google.maps.event.addDomListener(window, 'load', init_map);
                            </script>
                            <div id="map-container" class="col-md-12"></div>
                        </div>
                        <div class="row">
							<div class="col-md-6">
								<div class="form-group">
								   {{ form_label(form.nbTable) }}
								   {{ form_widget(form.nbTable, {'attr' : {'class' : 'form-control'}}) }}
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
								   {{ form_label(form.rdv) }}
								   {{ form_widget(form.rdv, {'attr' : {'class' : 'form-control'}}) }}
								</div>
							</div>
                        </div>
                    </div>
                </div>
                <br>
                <div class="session-creation">
                    <h2>Sessions</h2>
                    <div class="list-group row well">
                        <button type="button" class="list-group-item">Session 1</button>
                        <button type="button" class="list-group-item">Session 2</button>
                    </div>
                    <h2>Ajouter une session</h2>
                    <div class="row well">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Titre</label>
                                <input type="text" name="session_name" class="form-control" placeholder="Titre">
                            </div>
                            <div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label>Heure début</label>
									<div class='input-group date' id='datetimepicker3'>
										<input type='text' name="horaireDebut" class="form-control" />
										<span class="input-group-addon">
											<span class="glyphicon glyphicon-time"></span>
										</span>
									</div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Heure fin</label>
									<div class='input-group date' id='datetimepicker4'>
										<input type='text' name="horaireFin" class="form-control" />
										<span class="input-group-addon">
											<span class="glyphicon glyphicon-time"></span>
										</span>
									</div>
								</div>
							</div>
							<div class="row justified" style="margin-top: 20px;">
									<button type="button" class="btn btn-lg">Ajouter</button>
							</div>
						</div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" placeholder="Description" name="session_desc" style="min-height:220px;"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <h2>Ajouer un partenaire</h2>
                <div class="row well">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Partenaire</label>
                            <input type="text" class="form-control" name="partner_name" placeholder="Partenaire">
                        </div>
                        <div class="form-group">
						<label>Adresse</label>
						  <input type="text" name="partner_address" class="form-control" name="partner_address" placeholder="Adresse">
						</div>
						<div class="form-group">
						  <label>Ville</label>
						  <input type="text" name="partner_city" class="form-control" name="partner_city" placeholder="Ville">
						</div>
						<div class="form-group">
						  <label>Code postal</label>
						  <input type="text" name="partner_cp" class="form-control" name="partner_cp" placeholder="Code postal">
						</div>
                        <div class="form-group">
                            <label>Mail</label>
                            <input type="text" class="form-control" name="partner_email" placeholder="Mail">
                        </div>
                        <div class="form-group">
                            <label>Téléphone</label>
                            <input type="text" class="form-control" placeholder="Téléphone" name="partner_phone">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputFile">logo</label>
                              <span class="btn btn-default btn-file">
                                    Chercher sur mon ordinateur <input type="file" id="exampleInputFile2" name="partner_logo">
                              </span>
                            <p class="help-block">Image du partenaire</p>
                            <img class="img-responsive" src="http://placehold.it/700x400" alt="">
                        </div>
                    </div>
                </div>
                <div class="row justified" style="margin-top: 20px;">
									<input type="submit" class="btn btn-lg btn-success" name="form_action" value="Créer l'événement"/>
								</div>
							</form>
            </div>
            <!-- Aside here? -->
        </div>
    </div>
{% endblock %}
{%block javascripts%}
	<script src="{{ asset('assets/js/bootstrap-datetimepicker.js') }}"></script>
	<script src="{{ asset('assets/js/app.js') }}"></script>
	<script src="{{ asset('assets/js/formEffects.js') }}"></script>
	<script src="http://maps.google.com/maps/api/js?sensor=false"></script>
	<script src="{{ asset('assets/js/map.js') }}"></script>
{%endblock%}
