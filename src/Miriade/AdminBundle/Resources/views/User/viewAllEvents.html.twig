{% extends "MiriadeAdminBundle::base.html.twig" %}

{% block title %}Gestion des événements{% endblock %}

{% block content %}
<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Gestion des utilisateurs</h1>
			<p>Choisissez un évènement pour afficher la liste de ses utilisateurs.</p>
		</div>
</div>
<div class="col-lg-12" id="eventList">
<div class="row">
		<div class="col-md-4">
				<div class="input-group">
					<input type="text" class="form-control search" placeholder="Rechercher un projet...">
					<span class="input-group-btn">
						<button class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
					</span>
				</div><!-- /input-group -->
		</div>
</div>
	<br>
	<div class="table-responsive">
				<table class="table table-bordered table-hover">
						<thead>
								<tr>
										<th class="sort" data-sort="eventName">Évenement <b class="caret"></b></th>
										<th class="sort" data-sort="startDate">Date de début <b class="caret"></b></th>
										<th>Date de fin</b></th>
								</tr>
						</thead>
						<tbody class="list">

						{% for event in events %}
								<tr>
										<td><a class="eventName" href="{{ path('miriade_admin_users_events_users', {"id" : event.id}) }}">{{ event.title }}</a></td>
										<td class="startDate">{{ event.startDate }}</td>
										<td>{{ event.endDate }}</td>
								</tr>
						{% endfor %}
						</tbody>
				</table>
		</div>
</div>
{% endblock %}
