{% block content %}

	{% if error %}
	    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

<div id="login-page" class="container">
	<div class="row">
		<div class="col-md-9">
			<form action="{{ path("fos_user_security_check") }}" method="post">
				<div class="row well">
					<h2>Connexion</h2>
					<div class="row">
				    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
							<div class="form-group">
						    <label for="username">{{ 'security.login.username'|trans }}</label>
						    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
							</div>
							<div class="form-group">
								<label for="password">{{ 'security.login.password'|trans }}</label>
								<input type="password" id="password" class="form-control" name="_password" required="required" />
							</div>
							<div class="form-group">
						    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
								<label class="reset-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
							</div>
					    <input type="submit" id="_submit" class="btn btn-success" name="_submit" value="{{ 'security.login.submit'|trans }}" />
							<input type="reset" class="btn" />
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
{% endblock %}

{%block javascripts%}
	<script src="{{ asset('assets/js/formEffects.js') }}"></script>
{%endblock%}
