{% trans_default_domain 'FOSUserBundle' %}

{% extends 'MiriadeEventBundle::layout.html.twig' %}

{% block content %}

	<h1>Inscription</h1>
	{{ form_start(form, {"action": path('fos_user_registration_register')} ) }}
		{{ form_label(form.lastname) }}
		{{ form_widget(form.lastname) }}

		{{ form_label(form.firstname) }}
		{{ form_widget(form.firstname) }}

		{{ form_label(form.enterprise) }}
		{{ form_widget(form.enterprise) }}

		{{ form_label(form.job) }}
		{{ form_widget(form.job) }}

		{{ form_label(form.siret) }}
		{{ form_widget(form.siret) }}

		{{ form_label(form.adress) }}
		{{ form_widget(form.adress) }}

		{{ form_label(form.zipcode) }}
		{{ form_widget(form.zipcode) }}

		{{ form_label(form.city) }}
		{{ form_widget(form.city) }}

		{{ form_label(form.email) }}
		{{ form_widget(form.email) }}

		{{ form_label(form.phone) }}
		{{ form_widget(form.phone) }}

		{{ form_errors(form.plainPassword.first) }}
		{{ form_label(form.plainPassword.first, "Mot de pass ") }}
		{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control' }}) }}

		{{ form_label(form.plainPassword.second) }}
		{{ form_widget(form.plainPassword.second) }}
	    <div>
	        <input type="submit" value="{{ 'registration.submit'|trans }}" />
	    </div>
	{{ form_end(form) }}


{% endblock content %}
