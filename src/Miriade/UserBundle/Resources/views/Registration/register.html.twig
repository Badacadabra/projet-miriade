{% block content %}
	<div id="register-page" class="container">
		<div class="row">
			<div class="col-md-9">
					{{ form_start(form, {"action": path('fos_user_registration_register')} ) }}
						<div class="row well">
							<h2>Inscription</h2>
							<div id="register-container" class="row">
								<div class="col-md-6">
									<h3>Informations personnelles</h3>
									<div class="form-group">
										{{ form_label(form.lastname) }}
										{{ form_widget(form.lastname, { 'attr': {'class': 'form-control', 'tabindex': 1} }) }}
									</div>
									<div class="form-group">
										{{ form_label(form.firstname) }}
										{{ form_widget(form.firstname, { 'attr': {'class': 'form-control', 'tabindex': 2 } }) }}
									</div>
									<div class="form-group">
										{{ form_label(form.enterprise, "Nom de l'organisation") }}
										{{ form_widget(form.enterprise, { 'attr': {'class': 'form-control', 'tabindex': 3} }) }}
									</div>
									<div class="form-group">
										{{ form_label(form.siret) }}
										{{ form_widget(form.siret, { 'attr': {'class': 'form-control', 'tabindex': 4} }) }}
									</div>
									<div class="form-group">
										{{ form_label(form.job) }}
										{{ form_widget(form.job, { 'attr': {'class': 'form-control', 'tabindex': 5} }) }}
									</div>
									<div class="form-group">
										{{ form_label(form.adress) }}
										{{ form_widget(form.adress, { 'attr': {'class': 'form-control', 'tabindex': 6} }) }}
									</div>
									<div class="form-group">
										{{ form_label(form.zipcode) }}
										{{ form_widget(form.zipcode, { 'attr': {'class': 'form-control', 'tabindex': 7} }) }}
									</div>
									<div class="form-group">
										{{ form_label(form.city) }}
										{{ form_widget(form.city, { 'attr': {'class': 'form-control', 'tabindex': 8} }) }}
									</div>
									<div class="form-group">
										{{ form_label(form.phone) }}
										{{ form_widget(form.phone, { 'attr': {'class': 'form-control', 'tabindex': 9} }) }}
									</div>
								</div>
								<div class="col-md-6">
									<h3>Informations de connexion</h3>
									<div class="form-group">
										{{ form_label(form.email) }}
										{{ form_widget(form.email, { 'attr': {'class': 'form-control', 'tabindex': 10} }) }}
									</div>
									<div class="form-group">
										{{ form_errors(form.plainPassword.first) }}
										{{ form_label(form.plainPassword.first, "Choix du mot de passe") }}
										{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'tabindex': 11 }}) }}
									</div>
									<div class="form-group">
										{{ form_label(form.plainPassword.second, "Vérification du mot de passe") }}
										{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'tabindex': 12 }}) }}
									</div>
									<div>
											<input type="submit" class="btn btn-success" value="{{ 'registration.submit'|trans }}" tabindex="13" />
											<input type="reset" class="btn" tabindex="14" />
									</div>
								</div>
							</div>
						</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
{% endblock content %}

{%block javascripts%}
	<script src="{{ asset('assets/js/form.js') }}"></script>
{%endblock%}
