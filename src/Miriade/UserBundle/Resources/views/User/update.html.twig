{% extends 'MiriadeEventBundle::layout.html.twig' %}

{% block content %}
{%if app.session.get('currentEvent') != null %}
  <input type="hidden" id="event-slug" value="{{app.session.get('currentEvent').slug}}">
{%endif%}
<div class="row">
    <div class="col-md-8 col-md-offset-2">

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="panel panel-user-profile">
            <div class="panel-heading">
              <h3 class="panel-title">Modification de votre profil</h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="/web/assets/images/business-profile.png" class="img-circle img-responsive"> </div>
                <div class=" col-md-9 col-lg-9 ">

                    {# Les erreurs générales du formulaire. #}
                    {{ form_errors(form) }}

                    {{ form_label(form.lastname, "Nom :") }}
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}

                    {{ form_label(form.firstname, "Prénom :") }}
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}

                    {{ form_label(form.email, "Email :") }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}

                    {{ form_label(form.enterprise, "Entreprise :") }}
                    {{ form_widget(form.enterprise, {'attr': {'class': 'form-control'}}) }}

                    {{ form_label(form.job, "Poste occupé :") }}
                    {{ form_widget(form.job, {'attr': {'class': 'form-control'}}) }}

                    {{ form_label(form.siret, "Siret :") }}
                    {{ form_widget(form.siret, {'attr': {'class': 'form-control'}}) }}

                    {{ form_label(form.adress, "Adresse :") }}
                    {{ form_widget(form.adress, {'attr': {'class': 'form-control'}}) }}

                    {{ form_label(form.zipcode, "Code postal :") }}
                    {{ form_widget(form.zipcode, {'attr': {'class': 'form-control'}}) }}

                    {{ form_label(form.city, "Ville :") }}
                    {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}

                    {{ form_label(form.phone, "Téléphone :") }}
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}


                </div>
              </div>
            </div>
             <div class="panel-footer">
                <span class="pull-right">
                    <button type="submit" class="btn btn-sm btn-warning" title="Enregistrer les changements"><i class="glyphicon glyphicon-ok"></i>&nbsp;Enregistrer</button>
                </span>
            </div>
        </div> <!-- end .panel-user-profile -->
        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}

    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script src="{{ asset('assets/js/link.js') }}"></script>
{% endblock %}
